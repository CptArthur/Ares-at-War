<!-- NormaltoHighAlert -->
	<EntityComponent xsi:type="MyObjectBuilder_InventoryComponentDefinition">
      <Id>
          <TypeId>Inventory</TypeId>
          <SubtypeId>FAC_Context_Trigger_NormaltoHighAlert</SubtypeId>
      </Id>
      <Description>

	[RivalAI Trigger]
	[Type:TargetNear]
	[TargetDistance:4500]

	[UseTrigger:true]
	[StartsReady:true]
	[Conditions:FAC-Context-Condition-SettingNormal]

	[MinCooldownMs:20000]
	[MaxCooldownMs:20001]
	[MaxActions:-1]

	[Actions:FAC-Context-Action-InitHighAlert]	
      </Description>
      
    </EntityComponent>	

<!-- Normal/HighAlert to Battle -->
	<EntityComponent xsi:type="MyObjectBuilder_InventoryComponentDefinition">
      <Id>
          <TypeId>Inventory</TypeId>
          <SubtypeId>FAC_Context_Trigger_Damage</SubtypeId>
      </Id>
      <Description>

	[RivalAI Trigger]
	[Type:Damage]
	[DamageTypes:Any]

	[ExcludedDamageTypes:Environment]
	[ExcludedDamageTypes:Deformation]
	[ExcludedDamageTypes:Fire]
	
	
	[UseTrigger:true]
	[StartsReady:true]
	[Conditions:FAC-Context-Condition-SettingNormalOrHighAlert-HostileDamage]

	[MinCooldownMs:20000]
	[MaxCooldownMs:20001]
	[MaxActions:-1]

	[Actions:FAC-Context-Action-InitBattle]	
	  
      </Description>
      
    </EntityComponent>	
	

	
	
	

  <EntityComponents>


	<EntityComponent xsi:type="MyObjectBuilder_InventoryComponentDefinition">
      <Id>
          <TypeId>Inventory</TypeId>
          <SubtypeId>FAC_Context_Trigger_Start</SubtypeId>
      </Id>
      <Description>

	[RivalAI Trigger]
	[Type:Timer]
	[UseTrigger:true]
	[StartsReady:false]
	[MinCooldownMs:1000]
	[MaxCooldownMs:1001]
	[MaxActions:1]

	[Actions:FAC-Context-Action-InitNormal]	
	  
      </Description>
      
    </EntityComponent>

	<EntityComponent xsi:type="MyObjectBuilder_InventoryComponentDefinition">
      <Id>
          <TypeId>Inventory</TypeId>
          <SubtypeId>FAC_Context_Action_InitNormal</SubtypeId>
      </Id>
      <Description>

	[RivalAI Action]

	[UseChatBroadcast:true]
	[ChatData:FAC-Context-Chat-InitNormal]

	[SetBooleansTrue:SettingNormal]
	[SetBooleansFalse:SettingHighAlert]
	[SetBooleansFalse:SettingBattle]
	
	[SetBooleansFalse:ReadyforNormal]		  
	  
      </Description>
      
    </EntityComponent>


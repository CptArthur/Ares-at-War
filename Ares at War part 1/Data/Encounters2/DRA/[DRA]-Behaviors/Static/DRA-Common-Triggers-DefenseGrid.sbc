  <EntityComponents>

<!-- 
[Triggers:DRA-DefenseSystem-Trigger-ReceivedRedAlert]
[Triggers:DRA-DefenseSystem-Trigger-ReceivedSOS]
[Triggers:DRA-DefenseSystem-Trigger-SOS]

[Triggers:DRA-DefenseSystem-Trigger-MediumGarrison]

[Triggers:DRA-DefenseSystem-Trigger-LaunchingPatrolCraft]
[Triggers:DRA-DefenseSystem-Trigger-HeavyGarrison]

-->


    <EntityComponent xsi:type="MyObjectBuilder_InventoryComponentDefinition">
      <Id>
          <TypeId>Inventory</TypeId>
          <SubtypeId>DRA_DefenseSystem_Trigger_ReceivedRedAlert</SubtypeId>
      </Id>
      <Description>

	[RivalAI Trigger]
	[UseTrigger:true]
	[Type:CommandReceived]
	[StartsReady:true]		
	
	[MinCooldownMs:90000]
	[MaxCooldownMs:120000]
	
	[CommandReceiveCode:DRA-RedAlert]

	[MaxActions:-1]
	[ActionExecution:All]

	[Actions:FAC-Context-Action-InitBattle]
	
      </Description>
      
    </EntityComponent> 


  
    <EntityComponent xsi:type="MyObjectBuilder_InventoryComponentDefinition">
      <Id>
          <TypeId>Inventory</TypeId>
          <SubtypeId>DRA_DefenseSystem_Trigger_ReceivedSOS</SubtypeId>
      </Id>
      <Description>

	[RivalAI Trigger]
		[UseTrigger:true]
		[StartsReady:true]		
		
	[Type:CommandReceived]
	
	[MinCooldownMs:90000]
	[MaxCooldownMs:120000]
	
	[Conditions:FAC-Context-Condition-SettingNormal]
	[CommandReceiveCode:DRA-SOS]

	[MaxActions:-1]
	[ActionExecution:All]

	[Actions:DRA-DefenseSystem-Action-ReceivedSOS]
  [Actions:FAC-Context-Action-InitHighAlert]
	
      </Description>
      
    </EntityComponent> 
  
	<EntityComponent xsi:type="MyObjectBuilder_InventoryComponentDefinition">
      <Id>
          <TypeId>Inventory</TypeId>
          <SubtypeId>DRA_DefenseSystem_Action_ReceivedSOS</SubtypeId>
      </Id>
      <Description>

	[RivalAI Action]
[InheritLastAttackerFromCommand:true]
      </Description>
      
    </EntityComponent>   
  
 
  
  
 <!-- UnderAttack Beacon -->
    <EntityComponent xsi:type="MyObjectBuilder_InventoryComponentDefinition">
      <Id>
          <TypeId>Inventory</TypeId>
          <SubtypeId>DRA_DefenseSystem_Trigger_SOS</SubtypeId>
      </Id>
      <Description>

	[RivalAI Trigger]
	[Type:Damage]
	[UseTrigger:true]
	[StartsReady:true]		
	[DamageTypes:Any]

	[ExcludedDamageTypes:Environment]
	[ExcludedDamageTypes:Deformation]
	[ExcludedDamageTypes:Fire]

	[MinCooldownMs:90000]
	[MaxCooldownMs:120000]
	[Conditions:FAC-Context-Condition-SettingBattle]
	[MaxActions:-1]
	[Actions:DRA-DefenseSystem-Action-SOS]
	
      </Description>
      
    </EntityComponent>  

  
	<EntityComponent xsi:type="MyObjectBuilder_InventoryComponentDefinition">
      <Id>
          <TypeId>Inventory</TypeId>
          <SubtypeId>DRA_DefenseSystem_Action_SOS</SubtypeId>
      </Id>
      <Description>

	[RivalAI Action]
	
	[UseChatBroadcast:true]
	[ChatData:DRA-DefenseSystem-Chat-SOS]
	
	[BroadcastCommandProfiles:true]
	[CommandProfileIds:DRA-DefenseSystem-Command-SOS]


      </Description>
      
    </EntityComponent>    
  
  
	<EntityComponent xsi:type="MyObjectBuilder_InventoryComponentDefinition">
      <Id>
          <TypeId>Inventory</TypeId>
          <SubtypeId>DRA_DefenseSystem_Chat_SOS</SubtypeId>
      </Id>
	  
      <Description>

      [RivalAI Chat]
      
      [UseChat:true]
      [StartsReady:true]
      [Chance:100]
      [MaxChats:-1]
	[MinTime:180]
	[MaxTime:360]
      [BroadcastRandomly:true]
      
      [Author:{AntennaName}]
	[Color:{PlayerRelation}]
      
      [ChatMessages:This is {AntennaName}, we require inmediate assistance!]
      [ChatAudio:ArcHudGPSNotification1]
      [BroadcastChatType:Chat]
      

      </Description>
      
    </EntityComponent>  
    
    <EntityComponent xsi:type="MyObjectBuilder_InventoryComponentDefinition">
      <Id>
          <TypeId>Inventory</TypeId>
          <SubtypeId>DRA_DefenseSystem_Command_SOS</SubtypeId>
      </Id>
      <Description>

      [RivalAI Command]
      
	[CommandCode:DRA-SOS]
	[MatchSenderReceiverOwners:true]
	[SendTargetEntityId:true]

	[CommandDelayTicks:180]

      </Description>
      
    </EntityComponent>  
  

  

<?xml version="1.0"?>
<Definitions xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <EntityComponents>
	
	<!--
[Triggers:SYN-ForgoneStation-Triggers-EnableGreetings]
[Triggers:SYN-ForgoneStation-Triggers-DisableGreetings]
[Triggers:SYN-ForgoneStation-Triggers-Greeting]
[Triggers:SYN-ForgoneStation-Triggers-PlayerFar]


	-->
	
	
	<EntityComponent xsi:type="MyObjectBuilder_InventoryComponentDefinition">
      <Id>
          <TypeId>Inventory</TypeId>
          <SubtypeId>SYN_ForgoneStation_Triggers_EnableGreetings</SubtypeId>
      </Id>
      <Description>

	[RivalAI Trigger]
	[Type:PlayerNear]
	[TargetDistance:5000]
	[MinCooldownMs:10000]
	[MaxCooldownMs:10001]

	[UseTrigger:true]
	[StartsReady:true]
	  	 
	[Actions:SYN_ForgoneStation_Action_EnableGreetings]

      </Description>
      
    </EntityComponent>
	
	<EntityComponent xsi:type="MyObjectBuilder_InventoryComponentDefinition">
      <Id>
          <TypeId>Inventory</TypeId>
          <SubtypeId>SYN_ForgoneStation_Triggers_DisableGreetings</SubtypeId>
      </Id>
      <Description>

	[RivalAI Trigger]
	[Type:PlayerNear]
	[TargetDistance:5000]
	[MinCooldownMs:10000]
	[MaxCooldownMs:10001]

	[UseTrigger:true]
	[StartsReady:true]
	  	 
	[UseFailCondition:true]

	[Actions:SYN_ForgoneStation_Action_DisableGreetings]

      </Description>
      
    </EntityComponent>


	

	<EntityComponent xsi:type="MyObjectBuilder_InventoryComponentDefinition">
      <Id>
          <TypeId>Inventory</TypeId>
          <SubtypeId>SYN_ForgoneStation_Action_EnableGreetings</SubtypeId>
      </Id>
      <Description>

      [RivalAI Action]
        
	[EnableTriggers:true]
	[EnableTriggerNames:SYN_ForgoneStation_Triggers_Greeting]
	[EnableTriggerNames:SYN_ForgoneStation_Triggers_PlayerFar]
      </Description>
      
    </EntityComponent>	



	<EntityComponent xsi:type="MyObjectBuilder_InventoryComponentDefinition">
      <Id>
          <TypeId>Inventory</TypeId>
          <SubtypeId>SYN_ForgoneStation_Action_DisableGreetings</SubtypeId>
      </Id>
      <Description>

	[RivalAI Action]
	[DisableTriggers:true]
	[DisableTriggerNames:SYN_ForgoneStation_Triggers_Greeting]
	[DisableTriggerNames:SYN_ForgoneStation_Triggers_PlayerFar]
      </Description>
      
    </EntityComponent>	

	
	
<!-- Azuris

SYN-ForgoneStation-Triggers-Greeting
SYN-ForgoneStation-Triggers-PlayerFar


 -->
	<EntityComponent xsi:type="MyObjectBuilder_InventoryComponentDefinition">
      <Id>
          <TypeId>Inventory</TypeId>
          <SubtypeId>SYN_ForgoneStation_Triggers_Greeting</SubtypeId>
      </Id>
      <Description>

	[RivalAI Trigger]
	[Type:PlayerNear]
	[TargetDistance:2000]
	[UsePlayerCondition:true]
	[PlayerConditionIds:PlayerCondition-ExcludedPlayerNear]
	[UseTrigger:true]
	[StartsReady:true]
	  
	[Actions:SYN_ForgoneStation_Action_Greeting]	  
      </Description>
      
    </EntityComponent>

	<EntityComponent xsi:type="MyObjectBuilder_InventoryComponentDefinition">
      <Id>
          <TypeId>Inventory</TypeId>
          <SubtypeId>SYN_ForgoneStation_Action_Greeting</SubtypeId>
      </Id>
      <Description>

      [RivalAI Action]
        
	[UseChatBroadcast:true]
    [ChatData:SYN_ForgoneStation_Chat_Greeting]    
	
	[AddTagsToPlayers:true]
	[AddTags:PlayerNear]
	[AddTagsIncludeSavedPlayerIdentity:true]

	[SavePlayerIdentity:true]
      </Description>
      
    </EntityComponent>	
	
	<EntityComponent xsi:type="MyObjectBuilder_InventoryComponentDefinition">
      <Id>
          <TypeId>Inventory</TypeId>
          <SubtypeId>SYN_ForgoneStation_Chat_Greeting</SubtypeId>
      </Id>
	  
      <Description>

      [RivalAI Chat]
      
      [UseChat:true]
      [StartsReady:true]
      [Chance:100]
      [MaxChats:-1]
      [BroadcastRandomly:true]
      [MinTime:2]
      [MaxTime:3]

      [Author:Forgone Station]
      [Color:White]
      
	[ChatMessages:Greetings {PlayerName}! Welcome to Forgone Station]
	[BroadcastChatType:Chat]
    [ChatAudio:ArcHudGPSNotification2]

      </Description>
      
    </EntityComponent>

	
	<!-- The unsubscribe one -->
	<EntityComponent xsi:type="MyObjectBuilder_InventoryComponentDefinition">
      <Id>
          <TypeId>Inventory</TypeId>
          <SubtypeId>SYN_ForgoneStation_Triggers_PlayerFar</SubtypeId>
      </Id>
      <Description>

	[RivalAI Trigger]
	[Type:PlayerFar]
	[TargetDistance:3500]
	[UsePlayerCondition:true]
	[PlayerConditionIds:PlayerCondition-ExcludedPlayerNear]
	[PlayerConditionIds:PlayerCondition-SYNNeutral]
	
	
	[UseTrigger:true]
	[StartsReady:true]

	  
	[Actions:SYN_ForgoneStation_Action_PlayerFar]	  
      </Description>
      
    </EntityComponent>
	
	
	<EntityComponent xsi:type="MyObjectBuilder_InventoryComponentDefinition">
      <Id>
          <TypeId>Inventory</TypeId>
          <SubtypeId>SYN_ForgoneStation_Action_PlayerFar</SubtypeId>
      </Id>
      <Description>

      [RivalAI Action]
        
	[RemoveTagsFromPlayers:true]
	[RemoveTags:PlayerNear]
	[RemoveTagsIncludeSavedPlayerIdentity:true]
      </Description>
      
    </EntityComponent>	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
  </EntityComponents>
</Definitions>
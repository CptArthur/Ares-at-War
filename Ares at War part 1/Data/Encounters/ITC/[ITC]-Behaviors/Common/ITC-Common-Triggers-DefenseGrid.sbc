      <Id>
          <TypeId>Inventory</TypeId>
          <SubtypeId>ITC_Spawner_Patrol</SubtypeId>
      </Id>
      <Description>

	[RivalAI Spawn]

	[UseSpawn:true]

	[StartsReady:true]
	[SpawningType:CustomSpawn]

	[MaxSpawns:-1]

	[SpawnGroups:ITC-SpawnGroup-Patrol]

	[UseRelativeSpawnPosition:false]

    <EntityComponent xsi:type="MyObjectBuilder_InventoryComponentDefinition">
      <Id>
          <TypeId>Inventory</TypeId>
          <SubtypeId>ITC_DefenseSystem_Trigger_ReceivedRedAlert</SubtypeId>
      </Id>
      <Description>

	[RivalAI Trigger]
		[UseTrigger:true]
	[Type:CommandReceived]
	[StartsReady:true]		
	
	[MinCooldownMs:90000]
	[MaxCooldownMs:120000]
	
	[CommandReceiveCode:ITC_RedAlert]

	[MaxActions:-1]
	[ActionExecution:All]

	[Actions:FAC_Context_Action_InitBattle]
	
      </Description>
      
    </EntityComponent> 


  
    <EntityComponent xsi:type="MyObjectBuilder_InventoryComponentDefinition">
      <Id>
          <TypeId>Inventory</TypeId>
          <SubtypeId>ITC_DefenseSystem_Trigger_ReceivedSOS</SubtypeId>
      </Id>
      <Description>

	[RivalAI Trigger]
		[UseTrigger:true]
		[StartsReady:true]		
		
	[Type:CommandReceived]
	
	[MinCooldownMs:90000]
	[MaxCooldownMs:120000]
	
	[Conditions:FAC_Context_Condition_SettingNormal]
	[CommandReceiveCode:ITC_SOS]

	[MaxActions:-1]
	[ActionExecution:All]

	[Actions:ITC_DefenseSystem_Action_ReceivedSOS] 
  [Actions:FAC_Context_Action_InitHighAlert]
	
      </Description>
      
    </EntityComponent> 
  
	<EntityComponent xsi:type="MyObjectBuilder_InventoryComponentDefinition">
      <Id>
          <TypeId>Inventory</TypeId>
          <SubtypeId>ITC_DefenseSystem_Action_ReceivedSOS</SubtypeId>
      </Id>
      <Description>

	[RivalAI Action]
[InheritLastAttackerFromCommand:true]
      </Description>
      
    </EntityComponent>   
  
 
  
  
 <!-- UnderAttack Beacon -->
    <EntityComponent xsi:type="MyObjectBuilder_InventoryComponentDefinition">
      <Id>
          <TypeId>Inventory</TypeId>
          <SubtypeId>ITC_DefenseSystem_Trigger_SOS</SubtypeId>
      </Id>
      <Description>

	[RivalAI Trigger]
	[Type:Damage]
	[UseTrigger:true]
	[StartsReady:true]		
	[DamageTypes:Any]

	[ExcludedDamageTypes:Environment]
	[ExcludedDamageTypes:Deformation]
	[ExcludedDamageTypes:Fire]

	[MinCooldownMs:90000]
	[MaxCooldownMs:120000]
	[Conditions:FAC_Context_Condition_SettingBattle]
	[MaxActions:-1]
	[Actions:ITC_DefenseSystem_Action_SOS]
	
      </Description>
      
    </EntityComponent>  

  
	<EntityComponent xsi:type="MyObjectBuilder_InventoryComponentDefinition">
      <Id>
          <TypeId>Inventory</TypeId>
          <SubtypeId>ITC_DefenseSystem_Action_SOS</SubtypeId>
      </Id>
      <Description>

	[RivalAI Action]
	
	[UseChatBroadcast:true]
	[ChatData:ITC_DefenseSystem_Chat_SOS]
	
	[BroadcastCommandProfiles:true]
	[CommandProfileIds:ITC-DefenseSystem-Command-SOS]


      </Description>
      
    </EntityComponent>    
  
  
	<EntityComponent xsi:type="MyObjectBuilder_InventoryComponentDefinition">
      <Id>
          <TypeId>Inventory</TypeId>
          <SubtypeId>ITC_DefenseSystem_Chat_SOS</SubtypeId>
      </Id>
	  
      <Description>

      [RivalAI Chat]
      
      [UseChat:true]
      [StartsReady:true]
      [Chance:100]
      [MaxChats:-1]
	[MinTime:180]
	[MaxTime:360]
      [BroadcastRandomly:true]
      
      [Author:{AntennaName}]
      [Color:Red]
      
      [ChatMessages:This is {AntennaName}, we require inmediate assistance!]
      [ChatAudio:ArcHudGPSNotification1]
      [BroadcastChatType:Chat]
      

      </Description>
      
    </EntityComponent>  
    
    <EntityComponent xsi:type="MyObjectBuilder_InventoryComponentDefinition">
      <Id>
          <TypeId>Inventory</TypeId>
          <SubtypeId>ITC_DefenseSystem_Command_SOS</SubtypeId>
      </Id>
      <Description>

      [RivalAI Command]
      
	[CommandCode:ITC_SOS]
	[MatchSenderReceiverOwners:true]
	[SendTargetEntityId:true]

	[CommandDelayTicks:180]

      </Description>
      
    </EntityComponent>  
  
  
  
  
  
  

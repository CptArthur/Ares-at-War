	[Chance:100]
	[MaxChats:2]
	[BroadcastRandomly:false]     
	[Author:GC comms]
	[Color:Red]


	[ChatMessages:{AntennaName}. Command here. Activate defense protocols]
	[ChatAudio:ArcHudGPSNotification2]
	[BroadcastChatType:Chat]
      </Description>
      
    </EntityComponent>













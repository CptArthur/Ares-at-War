	<EntityComponent xsi:type="MyObjectBuilder_InventoryComponentDefinition">
      <Id>
          <TypeId>Inventory</TypeId>
          <SubtypeId>GC-Static-Chat-PlayerEnteringRestritedArea</SubtypeId>
      </Id>
	  
      <Description>

    [RivalAI Chat]
      
	[UseChat:true]
	[StartsReady:true]
	[Chance:100]
	[MaxChats:1]
	[BroadcastRandomly:true]     
	[Author:{AntennaName}]
	[Color:Red]
      
	[BroadcastRandomly:true]

	[ChatMessages:Attention {PlayerName}! You are entering a GC restricted area! Leave now!]
	[ChatAudio:ArcHudGPSNotification2]
	[BroadcastChatType:Chat]

	[ChatMessages:Attention {PlayerName}! You are entering GC restricted Airspace! Leave immediately!]
	[ChatAudio:ArcHudGPSNotification2]
	[BroadcastChatType:Chat]

      </Description>
      
    </EntityComponent>

	<EntityComponent xsi:type="MyObjectBuilder_InventoryComponentDefinition">
      <Id>
          <TypeId>Inventory</TypeId>
          <SubtypeId>GC-Static-Chat-PlayerInRestritedArea</SubtypeId>
      </Id>
	  
      <Description>

    [RivalAI Chat]
      
	[UseChat:true]
	[StartsReady:true]
	[Chance:100]
	[MaxChats:1]
	[BroadcastRandomly:true]     
	[Author:{AntennaName}]
	[Color:Red]
      
	[BroadcastRandomly:true]

	[ChatMessages:Have you lost your mind? You are not authorized to be in this Area. Leave now]
	[ChatAudio:ArcHudGPSNotification2]
	[BroadcastChatType:Chat]	

      </Description>
      
    </EntityComponent>
<!-- ============ Spotted Target =================-->
	<EntityComponent xsi:type="MyObjectBuilder_InventoryComponentDefinition">
      <Id>
          <TypeId>Inventory</TypeId>
          <SubtypeId>GC-Chat-SpottedTarget</SubtypeId>
      </Id>
	  
      <Description>

    [RivalAI Chat]
      
	[UseChat:true]
	[StartsReady:true]
	[Chance:100]
	[MaxChats:2]
	[BroadcastRandomly:false]     
	[Author:GC comms]
	[Color:Red]


	[ChatMessages:This is {AntennaName}. We have spotted possible threats. Command please advise]
	[ChatAudio:ArcHudGPSNotification1]
	[BroadcastChatType:Chat]	


      </Description>
      
    </EntityComponent>


	<EntityComponent xsi:type="MyObjectBuilder_InventoryComponentDefinition">
      <Id>
          <TypeId>Inventory</TypeId>

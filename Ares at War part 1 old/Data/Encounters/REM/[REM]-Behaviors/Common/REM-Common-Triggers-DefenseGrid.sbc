    <EntityComponent xsi:type="MyObjectBuilder_InventoryComponentDefinition">
      <Id>
          <TypeId>Inventory</TypeId>
          <SubtypeId>REM-DefenseSystem-Trigger-ReceivedRedAlert</SubtypeId>
      </Id>
      <Description>

	[RivalAI Trigger]
		[UseTrigger:true]
	[Type:CommandReceived]
	[StartsReady:true]		
	
	[MinCooldownMs:90000]
	[MaxCooldownMs:120000]
	
	[CommandReceiveCode:REM-RedAlert]

	[MaxActions:-1]
	[ActionExecution:All]

	[Actions:FAC-Context-Action-InitBattle]
	
      </Description>
      
    </EntityComponent> 


  
    <EntityComponent xsi:type="MyObjectBuilder_InventoryComponentDefinition">
      <Id>
          <TypeId>Inventory</TypeId>
          <SubtypeId>REM-DefenseSystem-Trigger-ReceivedSOS</SubtypeId>
      </Id>
      <Description>

	[RivalAI Trigger]
		[UseTrigger:true]
		[StartsReady:true]		
		
	[Type:CommandReceived]
	
	[MinCooldownMs:90000]
	[MaxCooldownMs:120000]
	
	[Conditions:FAC-Context-Condition-SettingNormal]
	[CommandReceiveCode:REM-SOS]

	[MaxActions:-1]
	[ActionExecution:All]

	[Actions:REM-DefenseSystem-Action-ReceivedSOS]
  [Actions:FAC-Context-Action-InitHighAlert]
	
      </Description>
      
    </EntityComponent> 
  
	<EntityComponent xsi:type="MyObjectBuilder_InventoryComponentDefinition">
      <Id>
          <TypeId>Inventory</TypeId>
          <SubtypeId>REM-DefenseSystem-Action-ReceivedSOS</SubtypeId>
      </Id>
      <Description>

	[RivalAI Action]
[InheritLastAttackerFromCommand:true]
      </Description>
      
    </EntityComponent>   
  
 
  
  
 <!-- UnderAttack Beacon -->
    <EntityComponent xsi:type="MyObjectBuilder_InventoryComponentDefinition">
      <Id>
          <TypeId>Inventory</TypeId>
          <SubtypeId>REM-DefenseSystem-Trigger-SOS</SubtypeId>
      </Id>
      <Description>

	[RivalAI Trigger]
	[Type:Damage]
	[UseTrigger:true]
	[StartsReady:true]		
	[DamageTypes:Any]

	[ExcludedDamageTypes:Environment]
	[ExcludedDamageTypes:Deformation]
	[ExcludedDamageTypes:Fire]

	[MinCooldownMs:90000]
	[MaxCooldownMs:120000]
	[Conditions:FAC-Context-Condition-SettingBattle]
	[MaxActions:-1]
	[Actions:REM-DefenseSystem-Action-SOS]
	
      </Description>
      
    </EntityComponent>  

  
	<EntityComponent xsi:type="MyObjectBuilder_InventoryComponentDefinition">
      <Id>
          <TypeId>Inventory</TypeId>
          <SubtypeId>REM-DefenseSystem-Action-SOS</SubtypeId>
      </Id>
      <Description>

	[RivalAI Action]
	
	[UseChatBroadcast:true]
	[ChatData:REM-DefenseSystem-Chat-SOS]
	
	[BroadcastCommandProfiles:true]
	[CommandProfileIds:REM-DefenseSystem-Command-SOS]


      </Description>
      
    </EntityComponent>    
  
  
	<EntityComponent xsi:type="MyObjectBuilder_InventoryComponentDefinition">
      <Id>
          <TypeId>Inventory</TypeId>
          <SubtypeId>REM-DefenseSystem-Chat-SOS</SubtypeId>
      </Id>
	  
      <Description>

      [RivalAI Chat]
      
      [UseChat:true]
      [StartsReady:true]
      [Chance:100]
      [MaxChats:-1]
	[MinTime:180]
	[MaxTime:360]
      [BroadcastRandomly:true]
      
      [Author:{AntennaName}]
      [Color:Red]
      
      [ChatMessages:This is {AntennaName}, we require inmediate assistance!]
      [ChatAudio:ArcHudGPSNoREMication1]
      [BroadcastChatType:Chat]
      

      </Description>
      
    </EntityComponent>  
    
    <EntityComponent xsi:type="MyObjectBuilder_InventoryComponentDefinition">
      <Id>
          <TypeId>Inventory</TypeId>
          <SubtypeId>REM-DefenseSystem-Command-SOS</SubtypeId>
      </Id>
      <Description>

      [RivalAI Command]
      
	[CommandCode:REM-SOS]
	[MatchSenderReceiverOwners:true]
	[SendTargetEntityId:true]

	[CommandDelayTicks:180]

      </Description>
      
    </EntityComponent>  
  
  
  
  
  
  
